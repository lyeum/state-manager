{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entity_schema.json",
  "title": "GM Entity Schema",
  "description": "TRPG 상태 DB에서 사용되는 모든 엔티티의 공통 스키마",
  "type": "object",
  "required": ["id", "entity_type", "meta"],
  "properties": {
    "id": {
      "description": "엔티티 고유 식별자",
      "type": "string",
      "minLength": 1
    },
    "entity_type": {
      "description": "엔티티 유형",
      "type": "string",
      "enum": [
        "story",
        "act",
        "sequence",
        "scene",
        "beat",
        "character",
        "location",
        "item",
        "event"
      ]
    },
    "meta": {
      "description": "엔티티 공통 메타데이터",
      "type": "object",
      "required": ["created_at", "updated_at"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    },
    "state": {
      "description": "엔티티의 현재 상태 값",
      "type": "object",
      "default": {}
    },
    "relations": {
      "description": "다른 엔티티와의 관계 정보",
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "default": {}
    }
  },
  "additionalProperties": false
}
