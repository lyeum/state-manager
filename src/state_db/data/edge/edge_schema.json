{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TRPG Edge Schema",
  "description": "공통 필드만 정의, 확장 영역은 properties로 남겨두어 확장 가능",
  "type": "object",
  "required": ["id", "session_id", "edge_type", "from_entity", "to_entity", "meta", "state"],

  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "엔티티 고유 식별자"
    },

    "session_id": {
      "type": "string",
      "format": "uuid",
      "description": "edge가 속한 세션 UUID"
    },

    "edge_type": {
      "type": "string",
      "description": "edge 유형 (예: owns, controls, uses 등)"
    },

    "from_entity": {
      "type": "string",
      "description": "출발 엔티티 UUID"
    },
    "to_entity": {
      "type": "string",
      "description": "도착 엔티티 UUID"
    },

    "hop": {
      "type": "integer",
      "minimum": 1,
      "description": "몇 단계 연결되는지"
    },

    "meta": {
      "type": "object",
      "required": ["created_at", "updated_at"],
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "state": {
      "type": "object",
      "properties": {
        "active": { "type": "boolean" },
        "weight": { "type": "number" }
      }
    },

    "properties": {
      "type": "object",
      "description": "각 edge 유형별 확장 가능한 속성, 자유롭게 정의 가능"
    }
  },
  "additionalProperties": false
}
