# ====================================================================
# State Manager 서버 설정
# ====================================================================
APP_HOST=127.0.0.1
APP_PORT=8030
APP_ENV=local

# ====================================================================
# PostgreSQL Database
# ====================================================================
DB_USER=state_user
DB_PASSWORD=state_password
DB_NAME=state_db
DB_HOST=localhost
DB_PORT=8621

# Apache AGE Graph
AGE_GRAPH_NAME=state_db

# ====================================================================
# 마이크로서비스 프록시 설정
# ====================================================================
RULE_ENGINE_URL=http://localhost:8050
GM_URL=http://localhost:8020

# 프록시 타임아웃 및 재시도 설정
PROXY_TIMEOUT=10.0
PROXY_MAX_RETRIES=3
PROXY_RETRY_MIN_WAIT=1.0
PROXY_RETRY_MAX_WAIT=10.0

